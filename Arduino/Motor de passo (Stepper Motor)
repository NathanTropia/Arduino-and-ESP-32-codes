// código testado apenas no Arduino Uno
// code tested only in Arduino Uno

//Library: Stepper by Arduino 1.1.3

#include <Stepper.h>

int passosPorVolta= 2048;

Stepper mp(passosPorVolta, 8, 9, 10, 11);

void setup(){

Serial.begin(9600);
Serial.println("Iniciar motor de passo...");

mp.setSpeed(15); // RPM

}

void loop(){

Serial.println("Sentido horário");
mp.step(passosPorVolta);
delay(500);

Serial.println("Sentido anti-horário");
mp.step(-passosPorVolta);
delay(500);

}
